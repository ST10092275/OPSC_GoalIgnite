<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="730dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/Register"
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/rName"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Name"
        android:textSize="19dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/border"
        android:textColor="@color/grey"
        android:layout_marginBottom="28dp"
        android:drawableStart="@drawable/baseline_person"/>

    <EditText
        android:id="@+id/rEmail"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Email"
        android:textSize="19dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/border"
        android:textColor="@color/grey"
        android:layout_marginBottom="28dp"
        android:drawableStart="@drawable/baseline_email_24"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">
    <EditText
        android:id="@+id/rPassword"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Password"
        android:textSize="19dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/border"
        android:textColor="@color/grey"
        android:layout_marginBottom="28dp"
        android:drawableStart="@drawable/baseline_lock_outline_24"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/createpasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">
    <EditText
        android:id="@+id/rCPassword"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Create Password"
        android:textSize="19dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/border"
        android:textColor="@color/grey"
        android:layout_marginBottom="28dp"
        android:drawableStart="@drawable/baseline_lock_outline_24"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Register"
        android:layout_marginStart="105dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="OR CONTINUE WITH"
        android:layout_marginStart="145dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp">
        <ImageView
            android:id="@+id/rGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/rFacebook"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/facebook"/>
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Already have an account?"
        android:layout_marginStart="128dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:id="@+id/rLogin"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Login"
        android:layout_marginStart="185dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"/>
</LinearLayout>