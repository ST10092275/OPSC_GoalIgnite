<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:id="@+id/registers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/names_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registers" />

    <EditText
        android:id="@+id/names_edittext"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:background="#C0C0C0"
        android:drawableStart="@drawable/name"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#000000"

        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/names_label" />

    <TextView
        android:id="@+id/emails_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/Email"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/names_edittext" />

    <EditText
        android:id="@+id/emails_edittext"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:background="#C0C0C0"
        android:drawableStart="@drawable/mail"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColorHint="#101010"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emails_label" />

    <TextView
        android:id="@+id/passwords_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/password"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emails_edittext" />

    <EditText
        android:id="@+id/passwords_edittext"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:drawableEnd="@drawable/eyes"
        android:autofillHints=""
        android:background="#C0C0C0"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="@string/password"

        android:inputType="textPassword"
        android:padding="12dp"
        android:paddingStart="10dp"
        android:textColor="#121212"
        android:textColorHint="#161515"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwords_label" />

    <TextView
        android:id="@+id/confirm_passwords_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm password"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwords_edittext" />

    <EditText
        android:id="@+id/confirm_passwords_edittext"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:background="#C0C0C0"
        android:drawableStart="@drawable/baseline_lock_24"
        android:hint="Confirm Password"
        android:drawableEnd="@drawable/eyes"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#100F0F"
        android:textColorHint="#0F0E0E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_passwords_label" />

    <Button
        android:id="@+id/register_but"
        android:layout_width="227dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:text="@string/registers"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_passwords_edittext" />

    <TextView

        android:id="@+id/or_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Or continue with "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_but" />

    <ImageButton
        android:id="@+id/facebook_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:contentDescription="google"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/google"
        app:layout_constraintEnd_toStartOf="@+id/or_continue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or_continue" />

    <ImageButton
        android:id="@+id/google_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:contentDescription="facebook"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toEndOf="@id/facebook_button"
        app:layout_constraintTop_toBottomOf="@+id/or_continue" />

    <ImageButton
        android:id="@+id/apple_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="apple"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/apple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toEndOf="@id/google_button"
        app:layout_constraintTop_toBottomOf="@+id/or_continue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Have an account?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apple_button"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="226dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apple_button" />


</androidx.constraintlayout.widget.ConstraintLayout>