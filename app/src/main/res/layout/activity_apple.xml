<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apple">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="206dp"
        android:layout_height="165dp"

        android:layout_marginTop="16dp"
        android:src="@drawable/apple"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/sign_in_with_google_account"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apple_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/sign_in_with_apple_id"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/apple_email"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="#C0C0C0"

        android:hint="Apple ID"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#101010"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apple_Id"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/password_apple"
        android:layout_width="351dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:autofillHints=""

        android:background="#C0C0C0"
        android:hint="@string/Passwordbtn"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawableEnd="@drawable/eyes"
        android:textColorHint="@color/black"
        android:textColor="#000000"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apple_email" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="348dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="@string/login2"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_apple" />


</androidx.constraintlayout.widget.ConstraintLayout>