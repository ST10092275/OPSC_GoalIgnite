<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient shading inside the box -->
    <gradient
        android:startColor="#F0F0F0"
        android:endColor="#F0F0F0"
        android:angle="270"/>        <!-- Angle for top to bottom gradient -->

    <!-- Border settings -->
    <stroke
        android:width="2dp"
        android:color="#F0F0F0" /> <!-- Border color (Grey) -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
