<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/baby_blue"/> <!-- Set the button color -->

    <corners android:radius="35dp"/> <!-- Set the corner radius (less round) -->

    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <stroke
        android:width="1dp"
        android:color="@color/baby_blue"/> <!-- Optional: Add border -->
</shape>
